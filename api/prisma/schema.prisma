datasource hammerDatasource {
  provider = env("PRISMA_PROVIDER")
  url = env("PRISMA_URL")
}

// We use Yarn's workspaces to "install" Photon's generated client
// as a dependency. We do this so that its included during build,
// packaging and distribution to production.

generator photonjs {
  provider = "photonjs"
  output = "../../packages/photon"
}

// Define your data model here â†´

// Example: User
model User {
  id Int @id
  name String?
  email String @unique
  isAdmin Boolean @default(false)
}
