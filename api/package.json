{
  "private": true,
  "name": "api",
  "version": "0.0.0",
  "dependencies": {
    "@hammerframework/api": "^0.0.1-alpha.14",
    "@prisma/photon": "2.0.0-preview018.1"
  },
  "devDependencies": {
    "@hammerframework/hammer-dev-server": "^0.0.1-alpha.12.5",
    "prisma2": "2.0.0-preview018.2"
  },
  "scripts": {
    "dev": "yarn hammer-dev-server",
    "db:up": "yarn prisma2 lift up && yarn prisma2 generate",
    "db:save": "yarn prisma2 lift save",
    "db:seed": "node prisma/seeds",
    "build": "NODE_ENV=production yarn workspace api db:up && NODE_ENV=production babel src --out-dir dist",
    "postinstall": "prisma2 generate"
  }
}
