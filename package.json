{
  "private": true,
  "name": "create-hammer-app",
  "version": "0.0.1-alpha.10",
  "workspaces": {
    "packages": [
      "api",
      "api/packages/photon",
      "web"
    ]
  },
  "devDependencies": {
    "@hammerframework/hammer-core": "^0.0.1-alpha.11",
    "@hammerframework/hammer-cli": "0.0.1-alpha.10",
    "@hammerframework/eslint-config-hammer": "0.0.1-alpha.10"
  },
  "eslintConfig": {
    "extends": "@hammerframework/eslint-config-hammer"
  },
  "scripts": {
    "dev": "yarn hammer dev",
    "open": "open http://localhost:8910",
    "dev:api": "yarn workspace api dev",
    "dev:web": "yarn workspace web dev",
    "dev:db": "yarn workspace api prisma2 dev",
    "lint": "yarn eslint 'web/src/**/*.js' 'api/src/**/*.js'",
    "lint:fix": "yarn eslint --fix 'web/src/**/*.js' 'api/src/**/*.js'"
  }
}
